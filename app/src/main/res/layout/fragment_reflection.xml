<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context="ReflectionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <View
                android:id="@+id/blueTopRect"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/rounded_bottom_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Рефлексия"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-110dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/userNameRef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Малыш А.В."
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="40dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/userNameRef"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="NotSibling">
                    <ImageView
                        android:id="@+id/userImagePrac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/kuromi"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="43dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box_for_mark"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как Вы оцениваете свою\nработу за месяц?"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/blue_for_text"
                        android:fontFamily="sans-serif-black" />

                    <LinearLayout
                        android:id="@+id/emojiGroup1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/excellent1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/exelmark" />

                        <ImageView
                            android:id="@+id/good1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/goodmark" />

                        <ImageView
                            android:id="@+id/normally1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/normmark" />

                        <ImageView
                            android:id="@+id/bad1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/badmark" />

                        <ImageView
                            android:id="@+id/terribly1"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/terrmark" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="43dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box_for_mark"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как Вам погода?"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/blue_for_text"
                        android:fontFamily="sans-serif-black" />

                    <LinearLayout
                        android:id="@+id/emojiGroup2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/excellent2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/exelmark" />

                        <ImageView
                            android:id="@+id/good2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/goodmark" />

                        <ImageView
                            android:id="@+id/normally2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/normmark" />

                        <ImageView
                            android:id="@+id/bad2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/badmark" />

                        <ImageView
                            android:id="@+id/terribly2"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/terrmark" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="43dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box_for_mark"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Как Вы оцениваете \nсами свою среду?"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textColor="@color/blue_for_text"
                        android:fontFamily="sans-serif-black" />

                    <LinearLayout
                        android:id="@+id/emojiGroup3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/excellent3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/exelmark" />

                        <ImageView
                            android:id="@+id/good3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/goodmark" />

                        <ImageView
                            android:id="@+id/normally3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/normmark" />

                        <ImageView
                            android:id="@+id/bad3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/badmark" />

                        <ImageView
                            android:id="@+id/terribly3"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/terrmark" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>