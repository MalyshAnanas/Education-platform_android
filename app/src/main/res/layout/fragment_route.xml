<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RouteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <!-- Голубая прямоугольная область сверху -->
            <View
                android:id="@+id/blueTopRectRoute"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/rounded_bottom_shape"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Заголовок "Маршрут" -->
            <TextView
                android:id="@+id/routeHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="132dp"
                android:layout_marginTop="30dp"
                android:fontFamily="sans-serif-black"
                android:text="Маршрут"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/blueTopRectRoute"
                app:layout_constraintTop_toTopOf="@id/blueTopRectRoute" />

            <!-- Счетчик документов -->
            <LinearLayout
                android:id="@+id/docsCounterLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/routeHeader"
                app:layout_constraintStart_toStartOf="@id/blueTopRectRoute"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/docsCounter1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Просмотрено: "
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/docsCounter3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 документа"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/docsCounter2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Не просмотрено: "
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/docsCounter4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 документа"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>

            <!-- Имя пользователя -->
            <TextView
                android:id="@+id/userNameRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Малыш А.В."
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/blueTopRectRoute"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Фотография пользователя -->
            <androidx.cardview.widget.CardView
                android:id="@+id/userPhotoContainer"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="230dp"
                app:cardCornerRadius="48dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.758"
                app:layout_constraintStart_toEndOf="@+id/userNameRoute"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/User_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kuromi" />

            </androidx.cardview.widget.CardView>

            <!-- Контейнер для документов -->
            <LinearLayout
                android:id="@+id/docsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                android:padding="20dp"
                app:layout_constraintTop_toBottomOf="@id/userPhotoContainer">

                <!-- Документ 1 -->
                <LinearLayout
                    android:id="@+id/DocArea1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/roundrect"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconRead1"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/doc_no_read" />

                    <TextView
                        android:id="@+id/docName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:lineSpacingExtra="4dp"
                        android:text="какой-то умный документ 1"
                        android:textColor="@color/gray_for_text"
                        android:textSize="25sp" />

                </LinearLayout>

                <!-- Документ 2 -->
                <LinearLayout
                    android:id="@+id/DocArea2"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundrect"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconRead2"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/doc_no_read" />

                    <TextView
                        android:id="@+id/docName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:lineSpacingExtra="4dp"
                        android:text="какой-то умный документ 2"
                        android:textColor="@color/gray_for_text"
                        android:textSize="25sp" />

                </LinearLayout>

                <!-- Документ 3 -->
                <LinearLayout
                    android:id="@+id/DocArea3"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/roundrect"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconRead3"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/doc_no_read" />

                    <TextView
                        android:id="@+id/docName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:lineSpacingExtra="4dp"
                        android:text="какой-то умный документ 3"
                        android:textColor="@color/gray_for_text"
                        android:textSize="25sp" />

                </LinearLayout>

                <!-- Документ 4 -->
                <LinearLayout
                    android:id="@+id/DocArea4"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/roundrect"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/IconRead4"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/doc_no_read" />

                    <TextView
                        android:id="@+id/docName4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-black"
                        android:lineSpacingExtra="4dp"
                        android:text="какой-то умный документ 4"
                        android:textColor="@color/gray_for_text"
                        android:textSize="25sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>