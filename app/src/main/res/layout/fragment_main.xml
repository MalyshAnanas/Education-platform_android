<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Заголовок -->
            <TextView
                android:id="@+id/Welcometext"
                android:layout_width="185dp"
                android:layout_height="72dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/Welcome_text"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/userPhotoContainer"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardCornerRadius="63dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.901"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/User_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kuromi" />

        </androidx.cardview.widget.CardView>

            <!-- Блок Мониторинг -->

            <androidx.cardview.widget.CardView
                android:id="@+id/monitoringCard"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/Welcometext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/monitoringTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Мониторинг"
                        android:textSize="30dp"
                        android:textColor="@color/blue_for_text"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="16dp" />

                    <!-- Контейнер для анимации горизонтального скролла -->
                    <HorizontalScrollView
                        android:id="@+id/monitoringScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_below="@id/monitoringTitle"
                        android:scrollbars="none"
                        android:fadingEdgeLength="50dp">

                        <LinearLayout
                            android:id="@+id/monitoringContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Карточка 1 -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/card1"
                                android:layout_width="198dp"
                                android:layout_height="180dp"
                                android:layout_marginHorizontal="8dp"
                                app:cardBackgroundColor="@color/blue_for_blocks"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:id="@+id/number1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="48sp" />

                                    <TextView
                                        android:id="@+id/label1"
                                        android:layout_width="185dp"
                                        android:layout_height="56dp"
                                        android:fontFamily="sans-serif-black"
                                        android:maxLines="2"
                                        android:text="обучающихся повысили оценку"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Карточка 2 -->
                            <androidx.cardview.widget.CardView
                                android:id="@+id/card2"
                                android:layout_width="198dp"
                                android:layout_height="180dp"
                                android:layout_marginHorizontal="8dp"
                                app:cardBackgroundColor="@color/blue_for_blocks"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:id="@+id/number2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:fontFamily="sans-serif-black"
                                        android:text="0"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="48sp" />

                                    <TextView
                                        android:id="@+id/label2"
                                        android:layout_width="185dp"
                                        android:layout_height="56dp"
                                        android:fontFamily="sans-serif-black"
                                        android:maxLines="2"
                                        android:text="обучающихся повысили оценку"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"
                                        android:textSize="20sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- Индикатор прокрутки -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/monitoringScrollView"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <View
                            android:id="@+id/dot1"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="4dp" />

                        <View
                            android:id="@+id/dot2"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginHorizontal="4dp" />

                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Блок Маршрут -->
            <androidx.cardview.widget.CardView
                android:id="@+id/routeCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toBottomOf="@id/monitoringCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/routeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Маршрут"
                        android:textSize="30dp"
                        android:textColor="@color/blue_for_text"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="16dp" />

                    <!-- Контейнер для анимации вертикального скролла -->
                    <LinearLayout
                        android:id="@+id/routeScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/routeTitle"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/routeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Элемент 1 -->
                            <LinearLayout
                                android:id="@+id/DocArea1"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:background="@drawable/roundrect"
                                android:layout_marginVertical="5dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:id="@+id/IconRead1"
                                    android:layout_width="64dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/doc_no_read" />

                                <TextView
                                    android:id="@+id/docName1"
                                    android:layout_width="224dp"
                                    android:layout_height="60dp"
                                    android:fontFamily="sans-serif-black"
                                    android:text="какой-то умный документ 1"
                                    android:textColor="@color/gray_for_text"
                                    android:textSize="25sp"
                                    android:layout_marginHorizontal="10dp"
                                    android:layout_marginTop="5dp"/>

                            </LinearLayout>

                            <!-- Элемент 2 -->
                            <LinearLayout
                                android:id="@+id/DocArea2"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:background="@drawable/roundrect"
                                android:layout_marginVertical="5dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:id="@+id/IconRead2"
                                    android:layout_width="64dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/doc_no_read" />

                                <TextView
                                android:id="@+id/docName2"
                                android:layout_width="224dp"
                                android:layout_height="60dp"
                                android:fontFamily="sans-serif-black"
                                android:text="какой-то умный документ 2"
                                android:textColor="@color/gray_for_text"
                                android:textSize="25sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"/>
                            </LinearLayout>


                            <!-- Элемент 3 -->
                            <LinearLayout
                                android:id="@+id/DocArea3"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:orientation="horizontal"
                                android:background="@drawable/roundrect"
                                android:layout_marginVertical="5dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?attr/selectableItemBackground">

                                <ImageView
                                    android:id="@+id/IconRead3"
                                    android:layout_width="64dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/doc_no_read" />

                                <TextView
                                android:id="@+id/docName3"
                                android:layout_width="224dp"
                                android:layout_height="60dp"
                                android:fontFamily="sans-serif-black"
                                android:text="какой-то умный документ 3"
                                android:textColor="@color/gray_for_text"
                                android:textSize="25sp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="5dp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>