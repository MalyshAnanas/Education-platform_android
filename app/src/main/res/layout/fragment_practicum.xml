<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PracticumFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <View
                android:id="@+id/blueTopRectPrac"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/rounded_bottom_shape"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/practicumHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Практикум"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/completedCasesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выполнено: 0 кейса\nНе выполнено: 0 кейса"
                android:textSize="20sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/white"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/practicumHeader"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/userNamePrac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Малыш А.В."
                android:textSize="25sp"
                android:textColor="@color/black"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/blueTopRectPrac"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="@id/userNamePrac"
                app:layout_constraintTop_toTopOf="@id/userNamePrac"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/userImagePrac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kuromi"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="16dp"
                app:columnCount="2"
                app:alignmentMode="alignMargins"
                app:layout_constraintTop_toBottomOf="@id/userNamePrac">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardCase1"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blue_for_blocks">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/NameCase1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кейс 1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/DescriptionCase1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Блаблаблабла\nбла"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardCase2"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blue_for_blocks">

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/NameCase2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Кейс 2"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/DescriptionCase2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Блаблаблабла\nбла"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                app:columnCount="2"
                app:alignmentMode="alignMargins"
                app:layout_constraintTop_toBottomOf="@id/line1">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardCase3"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blue_for_blocks">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/NameCase3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Кейс 3"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/DescriptionCase3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Блаблаблабла\nбла"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardCase4"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    app:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="@color/blue_for_blocks">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">
                        <TextView
                            android:id="@+id/NameCase4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Кейс 4"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/DescriptionCase4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Блаблаблабла\nбла"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.gridlayout.widget.GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>